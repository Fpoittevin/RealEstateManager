<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/primaryColor</item>
        <item name="colorPrimaryDark">@color/primaryDarkColor</item>
        <item name="colorAccent">@color/secondaryColor</item>
    </style>

    <style name="CardViewStyle" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_margin">@dimen/default_big_margin</item>
    </style>

    <style name="FabStyle" parent="Widget.MaterialComponents.ExtendedFloatingActionButton">
        <item name="layout_anchorGravity">bottom|right|end</item>
        <item name="backgroundTint">@color/secondaryColor</item>
        <item name="android:layout_margin">@dimen/default_big_margin</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
    </style>

    <style name="Title6Style" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_medium</item>
        <item name="android:textColor">@color/secondaryColor</item>
        <item name="android:layout_margin">@dimen/default_big_margin</item>
    </style>

    <style name="BodyTextStyle" parent="TextAppearance.MaterialComponents.Body1">
        <item name="android:layout_marginStart">@dimen/default_big_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_big_margin</item>
        <item name="android:layout_marginBottom">@dimen/default_small_margin</item>
        <item name="fontFamily">@font/roboto_regular</item>
    </style>

    <style name="BodyTextWithIconStyle" parent="BodyTextStyle">
        <item name="android:drawablePadding">@dimen/default_small_margin</item>
    </style>

    <style name="divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">?android:attr/listDivider</item>
        <item name="android:layout_margin">@dimen/default_big_margin</item>
    </style>

    <style name="SliderStyle">
        <item name="android:layout_marginStart">@dimen/default_big_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_big_margin</item>
    </style>
    <style name="SliderTextInfoStyle">
        <item name="android:layout_marginStart">@dimen/default_big_margin</item>
        <item name="android:layout_marginEnd">@dimen/default_big_margin</item>
    </style>

    <style name="ChipStyle" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="android:layout_margin">@dimen/default_big_margin</item>
    </style>

    <style name="ToolbarStyle" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="colorControlNormal">@android:color/white</item>
    </style>

    <style name="TitleToolbarStyle" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="fontFamily">@font/roboto_thin</item>
    </style>

    <style name="IconOnlyButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

</resources>